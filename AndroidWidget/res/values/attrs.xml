<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="PageIndicator">
        
        <!-- 指示器个数 -->
        <attr name="Page_count" format="integer" />
        <!-- 指示器布局 -->
        <attr name="android:layout" />
        
    </declare-styleable>
    
    <declare-styleable name="LetterBar">
        
        <!-- A drawable to use as the background. -->
        <attr name="android:background" />
        <!-- Size of the Letter. -->
        <attr name="android:textSize" />
        <!-- Letter color. -->
        <attr name="android:textColor" />
        <!-- Color of the letter selection highlight. -->
        <attr name="android:textColorHighlight" />
        
    </declare-styleable>
    <attr name="LetterBar" format="reference" />
    
    <declare-styleable name="FlowLayout">
        
        <attr name="android:numColumns" />
        <attr name="android:horizontalSpacing" />
        <attr name="android:verticalSpacing" />
        <attr name="android:gravity" />
        
    </declare-styleable>
    
    <declare-styleable name="HistogramChartView">
        
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <!-- 柱状图的宽度 -->
        <attr name="Histogram_width" format="dimension" />
        <!-- 柱状图的颜色 -->
        <attr name="Histogram_color" format="reference|color" />
        <!-- 是否显示数值 -->
        <attr name="Histogram_showSize" format="boolean" />
        <!-- 显示模式 -->
        <attr name="Histogram_mode">
            <flag name="none" value="0" />
            <!-- 数值越低，颜色越偏向红色 -->
            <flag name="lowerSize" value="1" />
            <!-- 是否显示动画加载效果 -->
            <flag name="animation" value="2" />
        </attr>
        
    </declare-styleable>
    <attr name="HistogramChartView" format="reference" />
    
    <declare-styleable name="MyGallery">
        
        <!-- 最大旋转角度 -->
        <attr name="Gallery_maxDegree" format="integer" />
        <!-- 最大缩放角度 -->
        <attr name="Gallery_maxZoom" format="integer" />
        <!-- 样式 -->
        <attr name="Gallery_style">
            <flag name="none" value="0" />
            <!-- 旋转开关 -->
            <flag name="rotate" value="1" />
            <!-- 缩放开关 -->
            <flag name="zoom" value="2" />
            <!-- 透明开关 -->
            <flag name="alpha" value="4" />
        </attr>
        
    </declare-styleable>
    
    <declare-styleable name="MaxSizeLayout">
        
        <attr name="android:maxWidth" />
        <attr name="android:maxHeight" />
        
    </declare-styleable>
    
    <declare-styleable name="Panel">
        
        <!-- 开关摆放位置 -->
        <attr name="Panel_position">
            <flag name="top" value="0" />
            <flag name="bottom" value="1" />
            <flag name="left" value="2" />
            <flag name="right" value="3" />
        </attr>
        <!-- 开关展开图片 -->
        <attr name="Panel_open" format="reference|color" />
        <!-- 开关闭合图片 -->
        <attr name="Panel_close" format="reference|color" />
        <!-- 开合是否有动画效果 -->
        <attr name="Panel_animation" format="boolean" />
        
        <attr name="android:handle" />
        <attr name="android:content" />
        <attr name="android:animationDuration" />
        <attr name="android:interpolator" />
        
    </declare-styleable>
    
</resources>