<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/map_header_bg"
        >
	    <Button 
	        android:id="@+id/search"
	        android:layout_width="150dp"
	        android:layout_height="35dp"
	        android:background="@drawable/map_search"
	        
	        android:layout_marginLeft="12dp"
	        android:layout_marginTop="5dp"
	        android:gravity="center_vertical"
	        
	        android:hint="搜索地图"
	        android:textSize="17sp" />
        <ImageButton 
            android:id="@+id/point_what"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/map_header_btn"
            android:layout_marginLeft="15dp"
            android:src="@drawable/map_point_what" />
        <ImageButton 
            android:id="@+id/layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/map_header_btn"
            android:layout_marginLeft="5dp"
            android:src="@drawable/map_layer" />
        <ImageButton 
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/map_header_btn"
            android:layout_marginLeft="5dp"
            android:src="@drawable/map_location" />
    </LinearLayout>
	<com.google.android.maps.MapView
        android:id="@+id/mv"
	    android:layout_width="fill_parent"
        android:layout_height="fill_parent"
	    android:apiKey="0jgQiO1blE8lriwL9TZKRIhqjPlt1MeJswkPheg"
	    android:clickable="true" />
</LinearLayout>