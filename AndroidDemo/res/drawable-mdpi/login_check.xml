<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_window_focused="false" android:state_checked="true" 
        android:drawable="@drawable/login_check_on_normal" /> 
  <item android:state_window_focused="false" android:state_checked="false" 
        android:drawable="@drawable/login_check_off_normal" /> 
  <item android:state_focused="true"  android:state_checked="true" 
        android:drawable="@drawable/login_check_on_focused" /> 
  <item android:state_focused="true"  android:state_checked="false" 
        android:drawable="@drawable/login_check_off_focused" /> 
  <item android:state_pressed="true"  android:state_checked="true" 
        android:drawable="@drawable/login_check_on_pressed" /> 
  <item android:state_pressed="true"  android:state_checked="false" 
        android:drawable="@drawable/login_check_off_pressed" /> 
        
  <item android:state_enabled="true" android:state_checked="true" 
        android:drawable="@drawable/login_check_on_normal" /> 
  <item android:state_enabled="true" android:state_checked="false" 
        android:drawable="@drawable/login_check_off_normal" /> 
</selector>