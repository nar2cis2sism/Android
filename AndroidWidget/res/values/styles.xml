<resources>
    
    <style name="page_indicator_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:button">@drawable/page_indicator_item</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="choose_button_item">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/choose_button</item>
    </style>

    <style name="LetterBar">
        <item name="background">#40222222</item>
        <item name="textSize">12sp</item>
        <item name="textColor">#666666</item>
        <item name="textColorHighlight">#3399ff</item>
    </style>

</resources>